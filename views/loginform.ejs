<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NS-Creations/We-make-best</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="shortcut icon" href="/default/favicon.ico" type="image/x-icon">
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('./partials/nav.ejs') %>
    </header>

    <div class="center">

        <div class="wrapper">


            <span class="close-icon" style="cursor: pointer;">
                <ion-icon name="close"></ion-icon>
            </span>
            <div class="form-box login">
                <h2>Login</h2>
                <form action="/login" method="post">
                    <div class="input-box">
                        <span class="icon">
                            <ion-icon name="mail-unread"></ion-icon>
                        </span>
                        <input type="email" name="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><ion-icon name="lock"></ion-icon></span>
                        <input type="password" name="password" required>
                        <label>password</label>
                    </div>
                    <div class="remember-forgot">
                        <label style="color: white;">
                            <input type="checkbox" class="rememberme"> Remember me
                        </label>
                        <a href="/forgotpassword">Forgot Password</a>
                    </div>
                    <button type="submit" class="btnn">Login</button>

                    <div class="login_registation">
                        <p class="bottomtext">Don't Have An Account
                            <a href="#register" class="register-link">Register</a>
                        </p>
                    </div>

                </form>
            </div>

            <div class="form-box register">
                <h2>Register</h2>
                <form action="/register" method="post" enctype="multipart/form-data">
                    <div class="input-box">
                        <span class="icon">
                            <ion-icon name="person"></ion-icon>
                        </span>
                        <input type="text" name="fullname" maxlength="20" required>
                        <label>Full-Name</label>
                    </div>
                    <div class="input-box" style="position: relative;">
                        <span class="icon">
                            <ion-icon name="person"></ion-icon>
                        </span>
                        <input type="text" name="username" id="username" minlength="6" maxlength="20" required>
                        <label>Username</label>
                        <span id="username-status" style="position: absolute;"></span>
                    </div>
                    <div class="input-box">
                        <span class="icon">
                            <ion-icon name="mail-unread"></ion-icon>
                        </span>
                        <input type="email" name="email" required>
                        <label>Email</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><ion-icon name="lock"></ion-icon></span>
                        <input type="password" name="password" required>
                        <label>password</label>
                    </div>
                    <div class="input-box">
                        <span class="icon"><ion-icon name="document"></ion-icon></ion-icon></span>
                        <input type="file" name="image" class="file-input" required value="Profile_pic">

                    </div>
                    <div class="remember-forgot">
                        <!-- <a href="#">Forgot Password</a> -->
                    </div>
                    <button type="submit" id="submitBtn" class="btnn">Register</button>

                    <div class="login_registation">
                        <p class="bottomtext">Already Have An Account
                            <a href="#login" class="login-link">Login</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>



    </div>

    <div class="back">

        <!-- <img src="/images/bg4.jpg" class="slideimg" alt=""> -->


        <div class="card-container-for-homepage">
            <%- include('./card.ejs') %>
        </div>


    </div>

    <%- include('./partials/scripts.ejs') %>
        <script src="/js/script.js"></script>
        <script>
            document.getElementById('username').addEventListener('input', function (e) {
                this.value = this.value.replace(/\s/g, '');
            

            });

            document.getElementById('myForm').addEventListener('submit', function (e) {
                const usernameInput = document.getElementById('username').value;
                if (/\s/.test(usernameInput)) {
                    alert('Spaces are not allowed in the username.');
                    e.preventDefault();
                }
            });

            

        </script>
        <script src="/js/checkAvalability.js"></script>
        <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
</body>

</html>